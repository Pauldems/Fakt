{
  "name": "bookingfakt",
  "version": "1.0.1",
  "main": "index.ts",
  "homepage": "./",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron:dev": "concurrently \"cross-env BROWSER=none npm run web\" \"wait-on http://localhost:8081 && cross-env NODE_ENV=development electron electron.js\"",
    "electron:build:web": "expo export:web",
    "electron:build:windows": "npm run electron:build:web && electron-builder --windows",
    "electron:build:mac": "npm run electron:build:web && electron-builder --mac",
    "electron:build:linux": "npm run electron:build:web && electron-builder --linux",
    "electron:build:all": "npm run electron:build:web && electron-builder -mwl"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.2",
    "@react-native-async-storage/async-storage": "1.24.0",
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-navigation/bottom-tabs": "^7.4.3",
    "@react-navigation/native": "^7.1.15",
    "@react-navigation/native-stack": "^7.3.22",
    "@sentry/react-native": "~7.2.0",
    "expo": "^54.0.13",
    "expo-auth-session": "^7.0.8",
    "expo-clipboard": "~8.0.7",
    "expo-crypto": "^15.0.7",
    "expo-document-picker": "~14.0.7",
    "expo-file-system": "~19.0.17",
    "expo-font": "~14.0.8",
    "expo-image-picker": "^17.0.8",
    "expo-linear-gradient": "~15.0.7",
    "expo-mail-composer": "~15.0.7",
    "expo-print": "~15.0.7",
    "expo-sharing": "~14.0.7",
    "expo-status-bar": "~3.0.8",
    "firebase": "^12.4.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.61.1",
    "react-native": "0.81.4",
    "react-native-blob-util": "^0.22.2",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-html-to-pdf": "^0.12.0",
    "react-native-reanimated": "~4.1.0",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "^0.5.1",
    "react-native-worklets-core": "^1.6.2",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@expo/ngrok": "^4.1.3",
    "@react-native-community/cli": "^20.0.2",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.1.10",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "electron": "^39.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.2.0",
    "jest-expo": "^54.0.16",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.1"
  },
  "private": true,
  "build": {
    "appId": "com.fakt.app",
    "productName": "FAKT",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "web-build/**/*",
      "electron.js",
      "preload.js",
      "assets/**/*"
    ],
    "mac": {
      "category": "public.app-category.business",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Office",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
